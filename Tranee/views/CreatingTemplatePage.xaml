<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tranee.views.CreatingTemplatePage"
             Title="Новий шаблон"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto, *, Auto">

        <VerticalStackLayout Grid.Row="0" Padding="15,10" Spacing="5" BackgroundColor="White">
            <Entry Text="{Binding CurrentTemplate.Name}" 
                   Placeholder="Назва тренування (напр. Груди)" 
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="Black"
                   PlaceholderColor="Gray"
                   BackgroundColor="Transparent"/>

        
            <Label Text="Опис (необов'язково):" TextColor="Gray" FontSize="12" />
            <Editor Text="{Binding CurrentTemplate.Description}" 
        Placeholder="Напишіть опис до тренування..."
        AutoSize="TextChanges"
        
        Keyboard="Text"
         />

            <BoxView HeightRequest="1" Color="#E0E0E0"/>

            <Grid ColumnDefinitions="Auto, *" Margin="0,5,0,0">
                <Label Text="Відпочинок (сек):" VerticalOptions="Center" TextColor="Gray" FontSize="14"/>
                <Entry Grid.Column="1" 
                       Text="{Binding CurrentTemplate.RestBetweenSets, Converter={StaticResource IntToString}}" 
                       Placeholder="90" 
                       Keyboard="Numeric"
                       HeightRequest="35"
                       HorizontalOptions="Start"
                       WidthRequest="80"
                       BackgroundColor="Transparent"/>
            </Grid>
        </VerticalStackLayout>

        <CollectionView Grid.Row="1" ItemsSource="{Binding AddedExercises}">
            <CollectionView.EmptyView>
                <Label Text="Список вправ порожній" 
                       TextColor="LightGray" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center"/>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="15,8" ColumnDefinitions="*, Auto, Auto">
                        <VerticalStackLayout Grid.Column="0" Spacing="0">
                            <Label Text="{Binding Name}" FontSize="15" FontAttributes="Bold" TextColor="Black"/>
                            <Label Text="{Binding GroupOfMuscle}" FontSize="12" TextColor="Gray"/>
                        </VerticalStackLayout>

                        <Label Grid.Column="1" Text="{Binding TargetSets, StringFormat='{}S: {0}'}" 
                               TextColor="Gray" FontSize="14" VerticalOptions="Center" Margin="10,0"/>

                        <Label Grid.Column="2" Text="{Binding TargetReps, StringFormat='{}R: {0}'}" 
                               TextColor="Gray" FontSize="14" VerticalOptions="Center" Margin="10,0"/>

                        <BoxView Grid.ColumnSpan="3" HeightRequest="1" Color="#F0F0F0" VerticalOptions="End"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Grid Grid.Row="2" RowDefinitions="Auto, Auto" Padding="10" RowSpacing="10" BackgroundColor="#FAFAFA">

            <BoxView Grid.Row="0" HeightRequest="1" Color="#E0E0E0" VerticalOptions="Start" Margin="-10, -10, -10, 0"/>

            <VerticalStackLayout Grid.Row="0" Spacing="8">

                <Grid ColumnDefinitions="2*, *" ColumnSpacing="8">
                    <Border Stroke="#E0E0E0" StrokeShape="RoundRectangle 8" Padding="10,0" HeightRequest="40" BackgroundColor="White">
                        <Entry Text="{Binding DraftExercise.Name}" Placeholder="Вправа" FontSize="14" BackgroundColor="Transparent"/>
                    </Border>

                    <Border Grid.Column="1" Stroke="#E0E0E0" StrokeShape="RoundRectangle 8" Padding="10,0" HeightRequest="40" BackgroundColor="White">
                        <Entry Text="{Binding DraftExercise.GroupOfMuscle}" Placeholder="Група" FontSize="14" BackgroundColor="Transparent"/>
                    </Border>
                </Grid>

                <Grid ColumnDefinitions="*, *, Auto" ColumnSpacing="8">
                    <Border Grid.Column="0" Stroke="#E0E0E0" StrokeShape="RoundRectangle 8" Padding="0" HeightRequest="40" BackgroundColor="White">
                        <Entry Text="{Binding DraftExercise.TargetSets, Converter={StaticResource IntToString}}" 
                               Placeholder="Sets" Keyboard="Numeric" HorizontalTextAlignment="Center" FontSize="14" BackgroundColor="Transparent"/>
                    </Border>

                    <Border Grid.Column="1" Stroke="#E0E0E0" StrokeShape="RoundRectangle 8" Padding="0" HeightRequest="40" BackgroundColor="White">
                        <Entry Text="{Binding DraftExercise.TargetReps, Converter={StaticResource IntToString}}" 
                               Placeholder="Reps" Keyboard="Numeric" HorizontalTextAlignment="Center" FontSize="14" BackgroundColor="Transparent"/>
                    </Border>

                    <Button Grid.Column="2" 
                            Text="+" 
                            Command="{Binding AddExerciseToBufferCommand}"
                            FontAttributes="Bold"
                            FontSize="20"
                            HeightRequest="40"
                            WidthRequest="50"
                            Padding="0"
                            CornerRadius="8"
                            BackgroundColor="#E0E0E0"
                            TextColor="Black"/>
                </Grid>
            </VerticalStackLayout>

            <Button Grid.Row="1"
                    Text="Зберегти Шаблон" 
                    Command="{Binding SaveTemplateCommand}"
                    
                    TextColor="White"
                    CornerRadius="8"
                    FontAttributes="Bold"
                    HeightRequest="45"/>
        </Grid>

    </Grid>
</ContentPage>