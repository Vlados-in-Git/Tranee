<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tranee.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label Text="Todays training UI" 
                   Margin="0,30,0,0"
                   HorizontalOptions="Center"/>
            
            <Label Text="data/time" />
            
            <Button Text="History"
                    Command="{Binding OpenAddTrainingPage}"/>




            <Button Text="Templates" 
                   Command="{Binding OpenCurrentSchemaPage}"
                    
             />


            <Button Text="Annalize"
                        Command="{Binding OpenAnalizePage}"
                 Grid.Column="1"
                        Grid.Row="1"/>
                
        







        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
