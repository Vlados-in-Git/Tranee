<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tranee.views.AddTrainPage"
             Title="AddTrainPage">

    <VerticalStackLayout Padding="20" Spacing="10">

        <Button Text="Додати тестове тренування"
         Command = "{ binding AddTrainingCommand}"
          />

        <Label Text="Мої тренування:" FontSize="18" FontAttributes="Bold"/>

        <CollectionView x:Name="WorkoutsList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Padding="10" BackgroundColor="#f0f0f0" Margin="0,5">
                        <Label Text="{Binding Date}" FontAttributes="Bold"/>
                        <Label Text="{Binding Quality, StringFormat='Якість: {0}'}"/>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>

</ContentPage>