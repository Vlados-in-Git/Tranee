<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tranee.views.ActiveTraningPage"
             xmlns:model="clr-namespace:TraneeLibrary;assembly=TraneeLibrary"
             xmlns:vm="clr-namespace:Tranee.viewModels"
             x:DataType="vm:ActiveTraningViewModel" 
             Title="Тренування">

    <Grid RowDefinitions="Auto, *">

        <VerticalStackLayout Grid.Row="0" Padding="15" BackgroundColor="#f0f0f0">
            <Label Text="{Binding CurrentSession.Date, StringFormat='{0:dd MMMM yyyy}'}" 
                   FontSize="18" FontAttributes="Bold" TextColor="Black"/>
          
        </VerticalStackLayout>

        <CollectionView Grid.Row="1" 
                        ItemsSource="{Binding CurrentSession.Exercises}"
                        SelectionMode="None"
                        Margin="0,0,0,20">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Exercise">

                    <Frame Margin="10,5" Padding="10" BorderColor="LightGray" CornerRadius="10">
                        <VerticalStackLayout>

                            <Label Text="{Binding Name}" 
                                   FontSize="18" 
                                   FontAttributes="Bold" 
                                   TextColor="{StaticResource Primary}"/>

                            <Label Text="{Binding GroupOfMuscle}" 
                                   FontSize="12" 
                                   TextColor="Gray"
                                   Margin="0,0,0,10"/>

                            <Grid ColumnDefinitions="30, *, *, 40" Margin="0,0,0,5">
                                <Label Text="№" FontAttributes="Bold" HorizontalOptions="Center"/>
                                <Label Grid.Column="1" Text="КГ" FontAttributes="Bold" HorizontalOptions="Center"/>
                                <Label Grid.Column="2" Text="Рази" FontAttributes="Bold" HorizontalOptions="Center"/>
                                <Label Grid.Column="3" Text="ОК" FontAttributes="Bold" HorizontalOptions="Center"/>
                            </Grid>

                            <VerticalStackLayout BindableLayout.ItemsSource="{Binding Sets}">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate x:DataType="model:Set">

                                        <Grid ColumnDefinitions="30, *, *, 40" Margin="0,5">

                                            <Label Text="{Binding Number}" 
                                                   VerticalOptions="Center" 
                                                   HorizontalOptions="Center"/>

                                            <Entry Grid.Column="1" 
                                                   Text="{Binding Weight}" 
                                                   Keyboard="Numeric" 
                                                   HorizontalTextAlignment="Center"
                                                   Placeholder="0"/>

                                            <Entry Grid.Column="2" 
                                                   Text="{Binding Reps}" 
                                                   Keyboard="Numeric" 
                                                   HorizontalTextAlignment="Center"
                                                   Placeholder="0"/>

                                            <CheckBox Grid.Column="3" 
                                                      HorizontalOptions="Center"/>

                                        </Grid>

                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </VerticalStackLayout>

                            <Button Text="+ Додати підхід" 
                                    FontSize="10" 
                                    HeightRequest="30" 
                                    Padding="0"
                                    Margin="0,10,0,0"
                                    BackgroundColor="Transparent"
                                    TextColor="Gray"/>

                        </VerticalStackLayout>
                    </Frame>

                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.EmptyView>
                <Label Text="Завантаження..." HorizontalOptions="Center" VerticalOptions="Center"/>
            </CollectionView.EmptyView>

        </CollectionView>
    </Grid>
</ContentPage>